<mvc:View
   controllerName="Essenceit.controller.App"
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:mvc="sap.ui.core.mvc">
    <List
        id="userList"        
        headerText="Usuários"
        class="sapUiResponsiveMargin"
        width="auto"        
        growing="true"
        growingScrollToLoad="true"        
        mode="Delete"                  
        itemPress=".onUpdateItem"      
        items="{
                path: '/users',
                sorter: { path: 'name' }                
            }" >
        <headerToolbar>
            <Toolbar>
                <Title text="Lista de usuários" />
                <ToolbarSpacer/>
                <SearchField width="50%" placeholder="Procurar pelo nome" search=".onFilter"/>
            </Toolbar>
        </headerToolbar>
        <CustomListItem>
            <HBox>
                <core:Icon size="2rem" src="sap-icon://customer" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
                <VBox  class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >                    
                    <Text text="{name} {lastName}"/>
                </VBox>                
            </HBox>     
        </CustomListItem>   
    </List>																			
</mvc:View>